<%- include('../baseHeader') -%>
<!-- Main Content -->
<div class="container main-content my-5">
  <h1>
    <% if (project) { %> 
    Edit Page
    <% } else { %>
    Create Page
    <% } %>
  </h1>
  <div class="container mt-5">
    <div class="card shadow-sm">
      <div class="card-body">
        <!-- <h2>Page Metadata</h2> -->
        <form>
          <div class="row gy-4">
            <div class="col-12 col-md-8 col-xxl-9">
              <div class="form-group row">
                <label for="title" class="col-sm-2 col-form-label bold">Title</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="title" placeholder="Enter title">
                </div>
              </div>
              <div class="form-group row">
                <label for="slug" class="col-sm-2 col-form-label bold">Slug</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="slug" placeholder="Enter slug">
                </div>
              </div>
              <hr class="my-4">
              <h2>Content</h2>
              <div class="form-group row mt-4">
                <div class="col-sm-12">
                  <textarea class="form-control" id="content" rows="10" placeholder="Enter page content"></textarea>
                </div>
              </div>
            </div>
            <div class="col-12 col-md-4 col-xxl-3 relative">
              <div class="card sticky">
                <div class="card-body">
                  <div class="d-grid gap-2 col-12 mx-auto">
                    <button type="submit" class="btn btn-block btn-outline-success">Save Page</button>
                    <% if (project) { %>
                    <button type="button" class="btn btn-block btn-outline-danger">Delete Page</button>
                    <button type="button" class="btn btn-block btn-outline-secondary">View Page</button>
                    <% } %>
                  </div>
                  <div class="form-check form-switch mt-2">
                    <input class="form-check-input" type="checkbox" role="switch" id="public">
                    <label class="form-check-label bold" for="public">Make page public</label>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>  
<%- include('../baseFooter') -%>

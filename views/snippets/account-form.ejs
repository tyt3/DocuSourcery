<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="first_name" class="bold">First Name
        <span class="required-field">*</span>
      </label>
      <input 
        type="text" 
        class="form-control" 
        id="first_name" 
        name="first_name" 
        <% if (user) { %>
        value="<%= user.first_name %>" 
        <% } %>
        required>
    </div>
  </div>
  <div class="col">
    <div class="form-group">
      <label for="last_name" class="bold">Last Name
        <span class="required-field">*</span>
      </label>
      <input 
        type="text" 
        class="form-control" 
        id="last_name" 
        name="last_name" 
        <% if (user) { %>
        value="<%= user.last_name %>" 
        <% } %>
        required>
    </div>
  </div>
</div>
<div class="form-group">
  <label for="username" class="bold">Username
    <span class="required-field">*</span>
  </label>
  <input 
    type="text" 
    class="form-control" 
    id="username" 
    name="username" 
    <% if (user) { %>
    value="<%= user.username %>"
    <% } %>
    maxlength="10">
</div>
<div class="form-group">
  <label for="email" class="bold">Email
    <span class="required-field">*</span>
  </label>
  <input 
    type="email" 
    class="form-control" 
    id="email" 
    name="email" 
    <% if (user) { %>
    value="<%= user.email %>"
    <% } %>
    required>
</div>
<div class="form-group">
  <% if (user) { %>
  <label for="password" class="bold">Current Password</label>
  <input type="password" class="form-control" id="current_password" name="current_password">
  <% } else { %>
  <label for="password" class="bold">Password
    <span class="required-field">*</span>
  </label>
  <input type="password" class="form-control" id="password" name="password" placeholder="">
  <% } %>
  <small><span class="fw-medium">Password must</span>
    <ul class="mb-0">
      <li>Contain at least 8 characters</li>
      <li>Contain no more than 20 characters</li>
      <li>Contain at least 1 upper case letter</li>
      <li>Contain at least 1 number</li>
      <li>Contain at least 1 special character</li>
    </ul>
  </small>
</div>
<% if (user) { %>
<div class="form-group">
  <label for="password" class="bold">New Password</label>
  <input type="password" class="form-control" id="password" name="password" placeholder="">
</div>
<% } %>
<div class="form-group">
  <label for="password" class="bold">Confirm Password
    <% if (!user) { %>
    <span class="required-field">*</span>
    <% } %>
  </label>
  <input type="password" class="form-control" id="password_conf" name="password_conf" placeholder="">
</div>
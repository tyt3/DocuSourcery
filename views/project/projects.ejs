<%- include('../baseHeader') -%>
<!-- Main Content -->
<div class="container main-content my-5">
  <h1>
    Projects
  </h1>
  
<!-- Browse by Tag  -->
<div class="card h-100 shadow-sm">
  <div class="card-body">
    <h2 class="fs-6 text-uppercase light">
      Browse Projects by Tag
    </h2>
    <% if (tags && tags.length > 0) { %>
      <% tags.forEach(function(tag) { %>
        <% if (tag.numProjects > 0) { %>
        <a href="/tag/<%= tag.slug %>" 
          class="badge badge-tag bg-ds-primary me-1">
          <%= tag.title %>
          <span class="badge bg-ds-tertiary"><%= tag.numProjects %></span>
        </a>
        <% } %>
      <% }); %>  
    <% } %>
    </div>
</div>


<!-- Second Section -->
<hr class="my-4">
<!-- <div class="row gy-4"> -->
  <!--Filters-->
  <!-- <div class="col-md col-lg-4">
  </div> -->

  <!-- Project Cards-->
  <!-- <div class="col-md col-lg-8"> -->
  <h2 class="text-center text-md-start">Projects</h2>
  <p><em><%= projects.length %> projects</em></p>
  <div class="row gy-4">
    <% projects.forEach(function(project) { %>
    <div class="col-md-6 col-xl-4">
      <div class="card h-100 shadow-sm">
        <% if (user) { %>
        <div class="card-header">
          <div class="row">
            <div class="col text-end">
                <% const isPinned = user.pinnedProjects.includes(project.id)  %>
                <% if (isPinned) { %>
                  <a href="/unpin/<%= project._id %>"  data-bs-toggle="tooltip" 
                    data-bs-placement="top" data-bs-title="Unpin project"><img class="card-header-icons"
                      src="https://cdn.glitch.global/7b5eb0c7-6676-473b-a061-efb01c2ba784/push_pin_w_strike_FILL0_wght400_GRAD0_opsz48.svg?v=1713672190839"></a>
                <% } else { %>
                    <a href="/pin/<%= project._id %>" data-bs-toggle="tooltip" 
                      data-bs-placement="top" data-bs-title="Pin project"><img class="card-header-icons" 
                      src="https://cdn.glitch.global/7b5eb0c7-6676-473b-a061-efb01c2ba784/push_pin_FILL0_wght400_GRAD0_opsz48.svg?v=1713672185447"></a>
                <% } %>
            </div>
          </div>
        </div>
        <% } %>
        <div class="card-body">
          <h5 class="card-title">
            <a href="#"><%= project.title %></a>
          </h5>
          <h* class="card-subtitle">
            <%= project.subtitle %>
          <p class="card-text mt-2">
            <strong>Last modified</strong>: <%= project.dateModified %>
          </p>
        </div>
        <div class="card-footer border-top-0 mb-2 bg-white">
          <a class="btn btn-ds-primary" href="/project/<%= project.slug %>">View Project</a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<%- include('../baseFooter') -%>
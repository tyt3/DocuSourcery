<div class="form-group">
  <label for="pronouns" class="bold">Pronouns</label>
  <input type="text" class="form-control" id="pronouns" name="pronouns" <% if (user && user.pronouns) { %>
    value="<%= profile.pronouns  %>" <% } else if (form) { %> value="<%= form.pronouns  %>" <% } %>>
</div>
<br />
<div class="form-group">
  <label for="title" class="bold">Title</label>
  <input type="text" class="form-control" id="title" name="title" <% if (user && user.title) { %>
    value="<%= profile.title  %>" <% } else if (form) { %> value="<%= form.title  %>" <% } %>>
</div>
<br />
<div class="form-group">
  <label for="other_affiliation" class="bold">Other Affiliation</label>
  <input type="text" class="form-control tagin" id="other_affiliation" name="other_affiliation" <% if 
    (!user) { %> value="<%= form.other_affiliation  %>" <% } %>>
</div>
<br />
<div class="form-group">
  <label for="website" class="bold">Website</label>
  <input type="url" class="form-control" id="website" name="website" <% if (user && user.website) { %>
    value="<%= profile.website  %>" <% } else if (form) { %> value="<%= form.website %>" <% } %>>
</div>
<br />
<div class="form-group">
  <label for="bio" class="bold">Bio</label>
  <textarea class="form-control" id="bio" name="bio" rows="3" placeholder="Markdown-enabled field" <% if
    (user && user.bio) { %>><%= profile.bio  %></textarea>
  <% } else if (form.bio) { %><%= form.bio  %></textarea>
  <% } else { %></textarea>
  <% } %>
</div>
<br />
<div class="form-group">
  <label for="photo_url" class="bold">Profile Photo URL</label>
  <input type="url" class="form-control" id="photo_url" name="photo_url" <% if (user &&
    user.profile_photo_url) { %> value="<%= profile.profile_photo_url  %>" <% } else if (form.photo_url) { %>
    value="<%= form.photo_url %>" <% } %> >
</div>
<br />

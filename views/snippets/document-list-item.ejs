<div class="card">
  <div class="card-body">
    <div>
      <div class="col-1">
        <span class="material-symbols-outlined">
          drag_handle
        </span>
      </div>
      <!-- Document Title -->
      <div class="col-8">
        <%= document.title %>
      </div>
      <!-- View and Edit Icons -->
      <div class="col-3">
        <a href="/page/<%= page.slug %>">
          <span class="material-symbols-outlined">
            visibility
          </span>
        </a>
        <a href="/page/edit/<%= page.slug %>">
          <span class="material-symbols-outlined">
            edit
          </span>
        </a>
      </div>
    </div>
    <!-- Pages List -->
    <ul class="list-group">
      <!-- Page Cards -->
      <% if (project.documents && project.documents.length > 0) { %>
        <% document.pages.forEach(function(page) { %>
          <% include './page-list-item.ejs' %>
        <% }); %>
      <% }
    </ul>
  </div>
</div>
<%- include('../baseHeader') -%>
<!-- Main Content -->
<div class="container main-content my-5">
  <h1>
    Log In
  </h1>

  <!-- Form -->
  <div class="row">
    <div class="mx-auto col-sm-10 col-md-8 col-lg-6 col-xxl-4">
      <div class="card shadow-sm"> 
        <div class="card-body">
          <form method="POST">
            <% if (useEmail) { %>
            <div class="form-group">
              <label for="username" class="bold">Email
                <span class="required-field">*
              </label>
              <input type="email" class="form-control" id="email" name="login" required>
              <small>
                <a class="text-decoration-none" href="/login/">Log in with username</a>
              </small>
            </div>
            <% } else { %>
            <div class="form-group">
              <label for="username" class="bold">Username
                <span class="required-field">*
              </label>
              <input type="username" class="form-control" id="username" name="login" required>
              <small>
                <a class="text-decoration-none" href="/login/?email=true">Log in with email</a>
              </small>
            </div>
            <% } %>
            <div class="form-group mt-2">
              <label for="password" class="bold">Password
                <span class="required-field">*
              </label>
              <input type="password" class="form-control" id="password" name="password" required>
              <!-- <small>
                <a class="text-decoration-none" href="/password_reset/">Forgot password?</a>
              </small> -->
            </div>
            <div class="col-md-12 text-center">
              <button type="submit" class="btn btn-6 btn-ds-primary">Log In</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
  <%- include('../baseFooter') -%>
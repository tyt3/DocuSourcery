            <div class="form-group mb-2">
              <label for="title" class="bold">Title</label>
              <input type="text" class="form-control" id="title" name="title" 
              <% if (page)  { %>
                value="<%= tage.title %>"
              <% }; %>
              placeholder="Enter title">
            </div>
            <div class="form-group mb-2">
              <label for="slug" class="bold">Slug</label>
              <input type="text" class="form-control" id="slug" name="slug" 
              <% if (page)  { %>
                value="<%= tage.slug %>"
              <% }; %>
              placeholder="Enter slug">
            </div>
            <div class="form-group mb-0">
              <label for="content" class="bold">Body</label>
              <textarea class="form-control" id="content" name="content" rows="10" 
              placeholder="Enter page content"
              <% if (page)  { %>
                ><%= page.content %></textarea>
              <% } else { %>
                ></textarea>
              <% }; %>></textarea>
              <small class="bold">* Markdown-enabled field</small>
            </div>
          </div>
          <div class="col-12 col-md-4 col-xxl-3 relative" id="action-panel">
            <div class="card" id="action-buttons">
              <div class="card-body">
                <div class="d-grid gap-2 col-12 mx-auto">
                  <button type="submit" class="btn btn-block btn-outline-success">Save Page</button>
                  <% if (page) { %>
                  <button type="button" class="btn btn-block btn-outline-danger"
